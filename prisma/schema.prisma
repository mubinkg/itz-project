generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String
  password String
  photo    String
}

enum Status {
  ACTIVE
  INACTIVE
  DELETED
}

enum Role {
  ADMIN
  USER
}

model Mouja {
  id        String   @id @default(cuid())
  name      String
  role      Role     @default(USER)
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Nothi {
  id               String @id @default(cuid())
  caseNo           String
  caseNoSecondLine String
  banglaYear       String
  ownerName        String
  parentOfOwner    String
  address          String
  saKhotian        String
  saLine           String
  rsKhotian        String
  rsLine           String
  quantity         String
  type             String
}
