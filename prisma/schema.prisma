generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String
  password String
  photo    String
}

enum Status {
  ACTIVE
  INACTIVE
  DELETED
}

enum Role {
  ADMIN
  USER
}

model Mouja {
  id        String   @id @default(cuid())
  name      String
  role      Role     @default(USER)
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Nothi     Nothi[]
}

model Nothi {
  id               String       @id @default(cuid())
  mouja            Mouja        @relation(fields: [moujaId], references: [id])
  caseNo           String
  caseNoSecondLine String
  banglaYear       String
  moujaId          String
  NothiOvibabok    NothiOwner[]
}

model NothiOwner {
  id          String @id @default(cuid())
  ownerName   String
  gurdianName String
  address     String
  nothi       Nothi  @relation(fields: [nothiId], references: [id])
  nothiId     String
}
