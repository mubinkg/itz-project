generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum Status {
  ACTIVE
  INACTIVE
  DELETED
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String
  password String
  photo    String
  role     Role   @default(USER)
}

model Mouja {
  id        String   @id @default(cuid())
  name      String
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Nothi     Nothi[]
}

model Nothi {
  id               String       @id @default(cuid())
  mouja            Mouja        @relation(fields: [moujaId], references: [id])
  caseNo           String
  caseNoSecondLine String
  banglaYear       String
  moujaId          String
  nothiOwner       NothiOwner[]
  landSurvey       LandSurvey[]
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
}

model NothiOwner {
  id          String @id @default(cuid())
  ownerName   String
  gurdianName String
  address     String
  nothi       Nothi  @relation(fields: [nothiId], references: [id])
  nothiId     String
}

model LandSurvey {
  id       String @id @default(cuid())
  saSurvey String
  saLine   String
  rsSurvey String
  rsLine   String
  quantiy  String
  type     String
  nothi    Nothi  @relation(fields: [nothiId], references: [id])
  nothiId  String
}
